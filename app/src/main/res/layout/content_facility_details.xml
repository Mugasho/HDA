<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.view.ViewPager
        android:id="@+id/facility_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
<LinearLayout
    android:id="@+id/lay_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/fragment_registration"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/lay_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <include layout="@layout/fragment_about"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay_hw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <include layout="@layout/fragment_hw"/>
    </LinearLayout>
</LinearLayout>
